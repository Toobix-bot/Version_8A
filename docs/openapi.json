{
  "openapi": "3.0.1",
  "info": {
    "title": "Echo Bridge OpenAPI",
    "version": "0.1.0",
    "description": "Minimal OpenAPI for the echo bridge for use as a stable public manifest"
  },
  "servers": [
    {
      "url": "https://your-username.github.io/your-repo"
    }
  ],
  "paths": {
    "/mcp": {
      "get": {
        "summary": "MCP SSE endpoint (proxied)",
        "responses": {
          "200": {
            "description": "SSE stream",
            "content": {
              "text/event-stream": {}
            }
          }
        }
      }
    },
    "/bridge/link_echo_generate/echo_generate": {
      "post": {
        "summary": "Echo generate endpoint (bridge)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "type": "object", "properties": { "prompt": { "type": "string" } }, "required": ["prompt"] }
            }
          }
        },
        "responses": {
          "200": { "description": "Echo response" }
        }
      }
    }
  }
}
