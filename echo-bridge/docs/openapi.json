                                                                                                                                                            "type":  "string"
                                                                                                                                                        },
                                                                                                                                              "k":  {
                                                                                                                                                        "type":  "integer",
                                                                                                                                                        "default":  5
                                                                                                                                                    }
                                                                                                                                          }
                                                                                                                       }
                                                                                                        }
                                                                               }
                                                               },
                                               "responses":  {
                                                                 "200":  {
                                                                             "description":  "ok"
                                                                         }
