        "summary": "Generate text (internal)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "prompt": {"type": "string"},
                  "contextIds": {"type": "array", "items": {"type": "integer"}}
                }
              }
            }
          }
        },
        "responses": {
          "200": {"description": "OK"}
        }
      }
    },
    "/bridge/link_echo_generate/echo_generate": {
      "post": {
        "summary": "Bridge proxy for echo_generate tool",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {"type": "object"}
            }
          }
        },
        "responses": {"200": {"description": "OK"}}
      }
    }
  }
}
